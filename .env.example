# Sanity Configuration
# Get these values from https://www.sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Sanity API Token (for preview and mutations)
# Create at: https://www.sanity.io/manage/project/YOUR_PROJECT/api#tokens
SANITY_API_TOKEN=your_api_token

# Revalidation secret for on-demand ISR
# Generate a random string for this
REVALIDATE_SECRET=your_revalidate_secret

# Analytics Configuration
# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# Enable GA4 in development (optional)
# NEXT_PUBLIC_GA_DEBUG=true

# Retargeting Pixels (optional)
NEXT_PUBLIC_FB_PIXEL_ID=
NEXT_PUBLIC_VK_PIXEL_ID=
NEXT_PUBLIC_TIKTOK_PIXEL_ID=
